<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".test">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        tools:context=".messageDetectionResult"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="48dp"
            android:text="建議動作:"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginStart="56dp"
            android:layout_marginTop="24dp"
            android:text="此為高風險訊息, 請進行多重確認"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvResult3" />

        <TextView
            android:id="@+id/tvResult3"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginStart="56dp"
            android:layout_marginTop="24dp"
            android:text="訊息中含有風險, 請留意訊息內容"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvResult2" />

        <TextView
            android:id="@+id/tvResult2"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginStart="132dp"
            android:layout_marginTop="16dp"
            android:text="適合直接閱讀"
            android:textColor="#ff0000"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="166dp"
            android:layout_height="166dp"
            android:layout_marginStart="110dp"
            android:layout_marginTop="24dp"
            android:background="#ffffff"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_result20" />

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>